<%-include('header')-%>

<div class="text-center center-div" id="login">
  <div class="container w-25 border py-5">
    <div class="title">
      <h2 class="font-weight-bold">Login de usuário</h2>
      <span>Caso seja cadastrado, faça o login: </span>
    </div>
    <form action="/" method="POST">
      <div class="form-group">
        <input type="email" class="form-control" placeholder="email" name="email">
        <small class="form-text text-muted text-left">ou registre o seu email</small>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="password" placeholder="senha">
      </div>
      <div id="btns">
        <input type="submit" value="Login" class="btn-login" href="/dashboard"></input>
        <a class="btn-register" href="/register">Registrar</a>
      </div>
    </form>
  </div>
</div>

<%-include('header')-%>